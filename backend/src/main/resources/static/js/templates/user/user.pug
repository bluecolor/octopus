.row
  .col-md-6.col-md-offset-3  
    .box.box-primary
      .box-header.with-border
        h3.box-title User
      .panel-body(style="height:400px")  
        form(name="connection-form", role='form')
          .box-body
            .form-group
              label Username
              input.js-item.form-control.js-username(name="username", type='text', required=true, autofocus=true)
            .form-group
              label Name
              input.js-item.form-control.js-name(name="name", type='text',  required=true)
            .form-group
              label Email
              input.js-item.form-control.js-name(name="email", type='text', required=true)
            .form-group
              label Role
              select.js-item.form-control.js-role(name="role")
                option(value="GUEST")     GUEST
                option(value="OPERATOR")  OPERATOR
                option(value="MASTER")    MASTER
            .form-group
              label Locked
              fieldset.js-item
                .radio.radio-inline.radio-danger(style="display:inline")
                  input#user-locked-1(type='radio', name='locked', value='1')
                  label(for='radio1')
                    | Yes
                .radio.radio-inline.radio-danger(style="display:inline")
                  input#user-locked-2(type='radio', name='locked', value='0', checked='1')
                  label(for='radio4')
                    | No    
      .box-footer
        a.btn.btn-danger.js-cancel-btn Close
        a.disabled.ladda-button.btn.btn-primary.pull-right.js-save-btn(data-style="expand-left") Save