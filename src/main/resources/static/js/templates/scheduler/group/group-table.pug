.row 
  .col-md-8.col-md-offset-2
    .box(style="border-top=0px")
      .box-header.with-border
        h3.box-title Groups
        .box-tools.pull-right
          .has-feedback.table-search
            input.form-control.input-sm.js-search(type='text', placeholder='Search')
            span.glyphicon.glyphicon-search.form-control-feedback
      .box-body.no-padding
        .table-controls
          a.btn.btn-default.btn-sm.js-reload-groups(type='button')
            i.fa.fa-refresh.text-blue.fa-lg
          a.js-new-btn.btn.btn-default.btn-sm(href='#/scheduler/groups/new')
            i.fa.fa-plus.text-green.fa-lg
          a.btn.btn-default.btn-sm.js-import-btn(href='#/scheduler/groups/import' data-toggle="tooltip" title="Import")
            i.fa.fa-upload.text-yellow.fa-lg          
          a.btn.btn-default.btn-sm.js-trash-btn.hidden(type='button')
            i.fa.fa-trash-o.text-danger.fa-lg
          a.js-export-btn.btn.btn-default.btn-sm.hidden(data-toggle="tooltip" title="Export group")
            i.fa.fa-download.text-green.fa-lg  

        
        .table-responsive.connection-items
          table.table.table-hover
            thead(style="display:none")
              tr
                th(style="width:20px")
                th 
                th
                th
                th
            tbody.js-group-table-body
      .box-footer.clearfix
        ul.pagination.pagination-sm.no-margin.pull-right
        
